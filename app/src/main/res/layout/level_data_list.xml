<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/list_element_padding">

    <TextView
        android:id="@+id/level_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level_name"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/total_programs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_programs"
        android:textSize="22sp"
        android:layout_marginLeft="@dimen/list_element_margin"/>

    <TextView
        android:id="@+id/completed_programs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/completed_programs"
        android:textSize="22sp"
        android:layout_marginLeft="@dimen/list_element_margin"/>
</LinearLayout>